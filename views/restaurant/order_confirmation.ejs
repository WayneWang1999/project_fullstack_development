<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Confirmation</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=home" />
    <style>
        body {
            background-color: whitesmoke;
        }
        table {
            width: 400px;
            border-collapse: collapse;
            text-align: center;
        }
        th, td {
            padding: 6px;
            border: 1px solid #ddd;
        }
        th {
            background-color: #f2f2f2;
        }
        h1 {
            margin-bottom: 50px;
            text-align: center;
        }
        h2 {
            text-align: center;
        }
        p {
            margin-top: 40px;
            text-align: center;
        }
        div {
            margin: 20px auto;
            width: 400px;
            border: 1px solid #ccc;
            border-radius: 25px;
        }
        span {
            padding: 4px;
        }
    </style>
</head>
<body>

<div>
    <a href="/restaurant" class="icon"><span class="material-symbols-outlined">home</span></a>
    <h1>Order Confirmation</h1>

    <% if (confirmationData) { %>
        <p>Confirmation #: <%= confirmationData.confirmationNumber %></p>
        <h2>Items</h2>
        <table>
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                <% confirmationData.menuItems.forEach(item => { %>
                    <tr>
                        <td><%= item.name %></td>
                        <td>$<%= parseFloat(item.price).toFixed(2) %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        <p>Total Price: $<%= confirmationData.totalPrice ? parseFloat(confirmationData.totalPrice).toFixed(2) : '0.00' %></p>
    <% } else { %>
        <p>No confirmation data available.</p>
    <% } %>

</div>

</body>
</html>
