<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Menu Item</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>

<body>
    <div class="container">
        <h1>Edit Menu Item</h1>

        <!-- Main Form for Editing Menu -->
        <form action="/owner/menu/update" method="post">
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>SKU</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>In Stock</th>
                        <th>Menu Image URL</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (menu) { %>
                        <tr>
                            <!-- Editable Name -->
                            <td>
                                <input type="text" name="name" value="<%= menu.name %>" class="form-control" required>
                            </td>

                            <!-- Editable SKU -->
                            <td>
                                <input type="text" name="sku" value="<%= menu.sku %>" class="form-control" required>
                            </td>

                            <!-- Editable Description -->
                            <td>
                                <input type="text" name="description" value="<%= menu.description %>" class="form-control">
                            </td>

                            <!-- Editable Price -->
                            <td>
                                <input type="number" name="price" value="<%= menu.price %>" class="form-control" step="0.01" required>
                            </td>

                            <!-- Editable In Stock -->
                            <td>
                                <select name="inStock" class="form-control" required>
                                    <option value="true" <%= menu.inStock ? 'selected' : '' %>>Yes</option>
                                    <option value="false" <%= !menu.inStock ? 'selected' : '' %>>No</option>
                                </select>
                            </td>

                            <!-- Editable Menu Image URL -->
                            <td>
                                <input type="text" name="menu_images_url" value="<%= menu.menu_images_url %>" class="form-control">
                            </td>

                            <!-- Hidden field to hold the menu item's ID -->
                            <input type="hidden" name="menuId" value="<%= menu._id %>">

                            <!-- Submit button for saving changes -->
                            <td>
                                <button type="submit" class="btn btn-sm btn-success">Save</button>
                            </td>
                        </tr>
                    <% } else { %>
                        <tr>
                            <td colspan="7">Menu not found</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </form>
    </div>
</body>

</html>
