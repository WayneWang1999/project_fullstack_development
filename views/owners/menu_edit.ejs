<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Menu Item</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            padding: 20px;
        }

        .container {
           
            margin: auto;
            background-color: white;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #007bff;
            color: white;
        }

        td input, td select {
            width: 100%;
            padding: 8px;
            margin: 4px 0;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        button {
            padding: 10px 15px;
            background-color: #28a745;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        button:hover {
            background-color: #218838;
        }

        /* Responsive design */
        @media (max-width: 600px) {
            table {
                font-size: 14px;
            }

            td input, td select {
                font-size: 14px;
                padding: 6px;
            }
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>Edit Menu Item</h1>

        <!-- Main Form for Editing Menu -->
        <form action="/owner/menu/update" method="post" enctype="multipart/form-data">
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>SKU</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>In Stock</th>
                        <th>Menu Image</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (menu) { %>
                        <tr>
                            <!-- Editable Name -->
                            <td>
                                <input type="text" name="name" value="<%= menu.name %>" required>
                            </td>

                            <!-- Editable SKU -->
                            <td>
                                <input type="text" name="sku" value="<%= menu.sku %>" required>
                            </td>

                            <!-- Editable Description -->
                            <td>
                                <input type="text" name="description" value="<%= menu.description %>">
                            </td>

                            <!-- Editable Price -->
                            <td>
                                <input type="number" name="price" value="<%= menu.price %>" step="0.01" required>
                            </td>

                            <!-- Editable In Stock -->
                            <td>
                                <select name="inStock" required>
                                    <option value="true" <%= menu.inStock ? 'selected' : '' %>>Yes</option>
                                    <option value="false" <%= !menu.inStock ? 'selected' : '' %>>No</option>
                                </select>
                            </td>

                            <!-- Editable Menu Image URL -->
                            <td>
                                <!-- Image preview or default "No image available" -->
                                <label for="menuImageUpload">
                                    <% if (menu.menu_images_url && menu.menu_images_url.img) { %>
                                        <img id="menuImagePreview" 
                                             src="data:<%= menu.menu_images_url.img.contentType %>;base64,<%= menu.menu_images_url.img.data.toString('base64') %>" 
                                             alt="<%= menu.menu_images_url.name %>" 
                                             style="width: 100px; height: auto; cursor: pointer;" />
                                    <% } else { %>
                                        <p id="noImageAvailable" style="cursor: pointer;">Click to upload an image</p>
                                    <% } %>
                                </label>
                            
                                <!-- Hidden file input field for image upload -->
                                <input type="file" id="menuImageUpload" name="menuImage" accept="image/*" style="display: none;" onchange="previewImage(event)">
                            </td>
                            

                            <!-- Hidden field to hold the menu item's ID -->
                            <input type="hidden" name="menuId" value="<%= menu._id %>">

                            <!-- Submit button for saving changes -->
                            <td>
                                <button type="submit">Save</button>
                            </td>
                        </tr>
                    <% } else { %>
                        <tr>
                            <td colspan="7">Menu not found</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </form>
    </div>
</body>


<script>
    // Function to preview image after selecting a file
    function previewImage(event) {
        const file = event.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function(e) {
                // Display the uploaded image in the preview area
                const imgElement = document.getElementById('menuImagePreview');
                if (imgElement) {
                    imgElement.src = e.target.result;
                } else {
                    const noImageText = document.getElementById('noImageAvailable');
                    noImageText.style.display = 'none';
                    const imgPreview = document.createElement('img');
                    imgPreview.id = 'menuImagePreview';
                    imgPreview.src = e.target.result;
                    imgPreview.style = "width: 100px; height: auto; cursor: pointer;";
                    noImageText.parentNode.appendChild(imgPreview);
                }
            };
            reader.readAsDataURL(file); // Convert image to base64 URL
        }
    }

    // Make the image clickable to trigger the file input
    document.getElementById('menuImagePreview')?.addEventListener('click', function() {
        document.getElementById('menuImageUpload').click();
    });
    document.getElementById('noImageAvailable')?.addEventListener('click', function() {
        document.getElementById('menuImageUpload').click();
    });
</script>

</html>
