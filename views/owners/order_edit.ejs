<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Edit</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Include jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>

<body>
    <div class="container">
        <h1>Order Details</h1>

        <!-- Customer Information -->
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th colspan="2">Customer Information</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><strong>Customer Name:</strong></td>
                    <td>
                        <%= order.customer.firstName %>
                            <%= order.customer.lastName %>
                    </td>
                </tr>
                <tr>
                    <td><strong>Customer Phone:</strong></td>
                    <td>
                        <%= order.customer.phone %>
                    </td>
                </tr>
            </tbody>
        </table>

        <!-- Shipping Address -->
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th colspan="2">Delivery Address</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><strong>Street:</strong></td>
                    <td>
                        <%= order.delivery_Address.street %>
                    </td>
                </tr>
                <tr>
                    <td><strong>City:</strong></td>
                    <td>
                        <%= order.delivery_Address.city %>
                    </td>
                </tr>
                <tr>
                    <td><strong>State:</strong></td>
                    <td>
                        <%= order.delivery_Address.state %>
                    </td>
                </tr>
                <tr>
                    <td><strong>Zip Code:</strong></td>
                    <td>
                        <%= order.delivery_Address.zipCode %>
                    </td>
                </tr>
                <tr>
                    <td><strong>Country:</strong></td>
                    <td>
                        <%= order.delivery_Address.country %>
                    </td>
                </tr>
            </tbody>
        </table>

        <!-- Order Status (Editable) -->
        <form action="/owner/orders/<%= order._id %>/edit" method="POST">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th colspan="2">Order Status</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><strong>Status:</strong></td>
                        <td>
                            <select name="orderStatus" class="form-select">
                                <option value="New" <%=order.orderStatus==='New' ? 'selected' : '' %>>New</option>
                                <option value="Ready for Delivery" <%=order.orderStatus==='Ready for Delivery'
                                    ? 'selected' : '' %>>Ready</option>

                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <button type="submit" class="btn btn-primary">Update Status</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </form>

        <!-- Total Amount -->
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th colspan="2">Total Amount</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><strong>Total:</strong></td>
                    <td>$<%= order.totalPrice.toFixed(2) %>
                    </td>
                </tr>
            </tbody>
        </table>


    </div>
</body>

</html>