<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Owner Management</title>
    <style>
        /* General reset */
        /* General reset */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: Arial, sans-serif;
    background-color: #f4f4f4;
    padding: 20px;
    position: relative; /* Add this to position the button */
}

h1, h2 {
    text-align: center;
    margin-bottom: 20px;
    color: #333;
}

/* Table Styling */
table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 40px;
    background-color: white;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    border-radius: 8px;
    overflow: hidden;
}

th, td {
    padding: 12px;
    text-align: left;
    border-bottom: 1px solid #ddd;
}

th {
    background-color: #007bff;
    color: white;
    text-transform: uppercase;
}

tr:hover {
    background-color: #f1f1f1;
}

td {
    color: #555;
}

/* Button Styling */
button {
    padding: 8px 12px;
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 14px;
    transition: background-color 0.3s ease;
}

button:hover {
    background-color: #0056b3;
}

button.btn-danger {
    background-color: #dc3545;
}

button.btn-danger:hover {
    background-color: #c82333;
}

/* Back Button Styling */
.back-btn {
    position: absolute; /* Position it absolutely */
    top: 20px; /* Distance from the top */
    right: 20px; /* Distance from the right */
    text-decoration: none; /* Remove underline */
    font-size: xx-large;
}

/* Responsive Design */
@media (max-width: 768px) {
    body {
        padding: 10px;
    }

    table {
        font-size: 14px;
    }

    button {
        font-size: 12px;
        padding: 6px 10px;
    }

    .back-btn {
        top: 10px; /* Adjust if necessary for mobile view */
        right: 10px; /* Adjust if necessary for mobile view */
    }
}

    </style>
</head>

<body>
    <h1>Owners</h1>
    <a href="/owner" class="back-btn">Back</a> <!-- Updated the class here -->

    <!-- Main Table for Owners -->
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Password</th>
                <th>Restaurant Name</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            <% if (owners && owners.length > 0) { %>
                <% owners.forEach(owner => { %>
                    <tr>
                        <td><%= owner.firstName %> <%= owner.lastName %></td>
                        <td><%= owner.email %></td>
                        <td><%= owner.password %></td>
                        <td><%= owner.restaurant_name %></td>
                        <td>
                            <form action="/owner/info/edit" method="get">
                                <button type="submit" class="btn btn-danger">Edit</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="5">No Owners found</td>
                </tr>
            <% } %>
        </tbody>
    </table>

    <!-- Separate Table for Menus -->
    <% if (owners && owners.length > 0) { %>
        <% owners.forEach(owner => { %>
            <h2><%= owner.restaurant_name %> Menus</h2>
            <table>
                <thead>
                    <tr>
                        <th>Menu Name</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>Menu SKU</th>
                        <th>In stock</th>
                        <th>Image</th>
                        <th>Edit</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (owner.restaurant_menus && owner.restaurant_menus.length > 0) { %>
                        <% owner.restaurant_menus.forEach(menu => { %>
                            <tr>
                                <td><%= menu.name %></td>
                                <td><%= menu.description %></td>
                                <td>$<%= menu.price %></td>
                                <td><%= menu.sku %></td>
                                <td><%= menu.inStock %></td>
                                <td>
                                    <% if (menu.menu_images_url && menu.menu_images_url.img) { %>
                                        <img src="data:<%= menu.menu_images_url.img.contentType %>;base64,<%= menu.menu_images_url.img.data.toString('base64') %>" 
                                             alt="<%= menu.menu_images_url.name %>" 
                                             style="width: 100px; height: auto;" />
                                    <% } else { %>
                                        <p>No image available</p>
                                    <% } %>
                                </td>
                                <td>
                                    <form action="/owner/menu/<%= menu._id %>/edit" method="get">
                                        <button type="submit" class="btn btn-danger">Edit</button>
                                    </form>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="6">No menus available</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        <% }); %>
    <% } %>
</body>

</html>
